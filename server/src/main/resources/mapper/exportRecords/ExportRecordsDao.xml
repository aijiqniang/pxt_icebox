<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.szeastroc.icebox.newprocess.dao.ExportRecordsDao">

    <select id="selectByExportList" resultType="com.szeastroc.icebox.newprocess.entity.IceBoxPutReport">
        select * from t_ice_box_put_report
        <trim prefix="WHERE" prefixOverrides="AND |OR ">
            <if test='ew.sqlSegment!=null'>
                and ${ew.sqlSegment}
            </if>
        </trim>
        order by id asc limit #{start},#{end}
    </select>

    <insert id="insertExportRecords">
        INSERT INTO `t_export_records` (`serial_num`, `job_name`, `user_id`, `user_name`, `type`, `request_time`)
        VALUES(#{serialNum},#{jobName},#{userId},#{userName},#{type},#{requestTime})
    </insert>
    <update id="updateExportRecords">
        UPDATE `t_export_records` SET `type`=1, `net_path` = #{netPath}, `end_request_time` = #{endRequestTime} WHERE `serial_num` = #{serialNum};
    </update>
    <select id="selectStoreForReport" parameterType="string" resultType="com.szeastroc.common.entity.customer.vo.StoreInfoDtoVo">
        select province_name provinceName,city_name cityName,district_name districtName,address from pxt_base.t_cus_store_info
        where store_number =#{storeNumber}
    </select>
    <select id="selectStoreKeeperNumberForReport" parameterType="string" resultType="string">
        SELECT member_number FROM pxt_base.t_cus_store_relate_member WHERE store_number=#{storeNumber} and shop_keeper = 0 limit 1
    </select>
    <select id="selectStoreKeeperForReport" parameterType="string" resultType="com.szeastroc.common.entity.customer.vo.MemberInfoVo">
        SELECT `name`,mobile FROM pxt_base.t_cus_member_info WHERE member_number=#{memberNumber}
    </select>
    <select id="selectVisitTypeForReport" parameterType="string" resultType="java.lang.Integer">
        SELECT cycle_type FROM pxt_base.t_visit_cycle_visiting WHERE customer_number=#{memberNumber}
    </select>
    <select id="selectDistrictNameForReport" parameterType="java.lang.Integer" resultType="java.lang.String">
        SELECT name FROM pxt_base.t_base_district WHERE id=#{districtId}
    </select>
</mapper>